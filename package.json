{
  "name": "monorepo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*",
    "shared/*"
  ],
  "scripts": {
    "prepare": "husky install",
    "lint": "turbo run lint",
    "lint-fix": "eslint \"**/*.{ts,tsx}\" --ext .ts,.tsx --fix",
    "dev-web": "pnpm --filter gocho_web dev",
    "build-web": "pnpm turbo build --scope=gocho_web --include-dependencies --no-deps",
    "start-web": "pnpm --filter gocho_web start",
    "dev-mobile": "pnpm --filter gocho_mobile dev",
    "build-mobile": "pnpm turbo build --scope=gocho_mobile --include-dependencies --no-deps",
    "start-mobile": "pnpm --filter gocho_mobile start",
    "dev-admin": "pnpm --filter gocho_admin dev",
    "build-admin": "pnpm turbo build --scope=gocho_admin --include-dependencies --no-deps",
    "start-admin": "pnpm --filter gocho_admin start",
    "dev-biz": "pnpm --filter gocho_business dev",
    "build-biz": "pnpm turbo build --scope=gocho_business --include-dependencies --no-deps",
    "start-biz": "pnpm --filter gocho_business start",
    "e2e:report": "pnpx playwright show-report"
  },
  "lint-staged": {
    "apps/**/src/pages/**/*.{ts,tsx}": [
      "eslint"
    ],
    "shared/ui/**/*.{ts,tsx}": [
      "eslint"
    ],
    "shared/constant/**/*.{ts,tsx}": [
      "eslint"
    ],
    "shared/style/**/*.{ts,tsx}": [
      "eslint"
    ],
    "shared/type/**/*.{ts,tsx}": [
      "eslint"
    ],
    "shared/api/**/*.{ts,tsx}": [
      "eslint"
    ],
    "shared/util/**/*.{ts,tsx}": [
      "eslint"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "18.7.13",
    "husky": "^8.0.0",
    "turbo": "^1.6.3"
  },
  "dependencies": {
    "eslint-config-deeple": "workspace:^1.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "4.7.2"
  }
}
