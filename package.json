{
  "name": "monorepo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "apps/*",
    "packages/*",
    "shared/*"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "prepare": "husky install",
    "lint": "turbo run lint",
    "lint-fix": "eslint \"**/*.{ts,tsx}\" --ext .ts,.tsx --fix",
    "dev-web": "cd apps/gocho_web && pnpm dev",
    "build-web": "pnpm turbo build --scope=gocho_web --include-dependencies --no-deps",
    "dev-mobile": "cd apps/gocho_mobile && pnpm dev",
    "build-mobile": "pnpm turbo build --scope=gocho_mobile --include-dependencies --no-deps",
    "dev-manager": "cd apps/gocho_manager && pnpm dev",
    "build-manager": "pnpm turbo build --scope=gocho_manager --include-dependencies --no-deps",
    "e2e:web": "pnpx playwright@1.28.0 test e2e/gocho_web --trace on",
    "e2e:mobile": "PLAYWRIGHT_BROWSERS_PATH=~/.cache/ms-playwright pnpx playwright@1.28.0 test e2e/gocho_mobile --trace on",
    "e2e:manager": "PLAYWRIGHT_BROWSERS_PATH=~/.cache/ms-playwright pnpx playwright@1.28.0 test e2e/gocho_mobile --trace on",
    "e2e:report": "pnpx playwright show-report"
  },
  "lint-staged": {
    "apps/**/src/pages/**/*.{ts,tsx}": [
      "eslint"
    ],
    "shared/ui/**/*.{ts,tsx}": [
      "eslint"
    ],
    "shared/constant/**/*.{ts,tsx}": [
      "eslint"
    ],
    "shared/style/**/*.{ts,tsx}": [
      "eslint"
    ],
    "shared/type/**/*.{ts,tsx}": [
      "eslint"
    ],
    "shared/api/**/*.{ts,tsx}": [
      "eslint"
    ],
    "shared/util/**/*.{ts,tsx}": [
      "eslint"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "18.7.13",
    "husky": "^8.0.0",
    "turbo": "^1.6.3"
  },
  "dependencies": {
    "@playwright/test": "1.28.0",
    "eslint-config-deeple": "workspace:^1.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typescript": "4.7.2"
  }
}
